<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="250.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.lab7_map_2.Controller.SignInController">
   <children>
      <GridPane alignment="CENTER" layoutX="54.0" layoutY="29.0" prefHeight="142.0" prefWidth="287.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="170.0" minWidth="10.0" prefWidth="115.0" />
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="170.0" minWidth="10.0" prefWidth="170.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints maxHeight="87.0" minHeight="10.0" prefHeight="42.0" vgrow="SOMETIMES" />
          <RowConstraints maxHeight="90.0" minHeight="10.0" prefHeight="48.0" vgrow="SOMETIMES" />
          <RowConstraints maxHeight="47.0" minHeight="0.0" prefHeight="44.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label prefHeight="35.0" prefWidth="80.0" text="first name" textAlignment="CENTER" />
            <Label text="last name" GridPane.rowIndex="1" />
            <Label text="password" GridPane.rowIndex="2" />
            <TextField fx:id="textFieldFirstName"
                       GridPane.columnIndex="1" />
            <TextField
                    fx:id="textFieldLastName"
                    GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <PasswordField
                    fx:id="textFieldPassword"
                    GridPane.columnIndex="1" GridPane.rowIndex="2" />
         </children>
         <padding>
            <Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
         </padding>
      </GridPane>
      <Button
              onAction="#handleSignIn"
              layoutX="140.0" layoutY="200.0"
              mnemonicParsing="false" prefHeight="40.0" prefWidth="110.0"
              text="Sign in" />
   </children>
</AnchorPane>
